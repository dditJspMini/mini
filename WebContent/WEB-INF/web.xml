<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:web="http://xmlns.jcp.org/xml/ns/javaee">
  <filter>
    <filter-name>sitemesh</filter-name>
    <filter-class>
         com.opensymphony.sitemesh.webapp.SiteMeshFilter
      </filter-class>
  </filter>
  <filter-mapping>
    <filter-name>sitemesh</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>ControllerAction</servlet-name>
    <servlet-class>com.nonage.controller.ControllerAction</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControllerAction</servlet-name>
    <url-pattern>*.did</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>AdminCheck</filter-name>
    <filter-class>com.nonage.filter.AdminCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AdminCheck</filter-name>
    <url-pattern>/index.html</url-pattern>
  </filter-mapping>
  
  <error-page>
		<error-code>404</error-code>
		<location>/error/error404.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>500</error-code>
		<location>/error/error500.jsp</location>
	</error-page>
	
	<error-page>
		<exception-type>java.lang.NullPointerException</exception-type>
		<location>/error/errorNullPointer.jsp</location>
	</error-page>
	
	 <session-config>
        <session-timeout>1</session-timeout>
    </session-config>
</web-app>